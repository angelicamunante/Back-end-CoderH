<div class="modal d-block bg-secondary py-5" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h2 class="fw-bold mb-0">Formulario</h2>
      </div>
      <div class="modal-body p-5 pt-0">
        <form>
          <div class="form-floating mb-3">
            <input type="text" class="form-control rounded-3" id="title" name="title" placeholder="Nombre del producto">
            <label for="title">Nombre</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control rounded-3" id="price" name="price" placeholder="Precio">
            <label for="price">Precio</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control rounded-3" id="thumbnail" name="thumbnail" placeholder="Miniatura">
            <label for="thumbnail">Miniatura</label>
          </div>
          <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" id="product-add" type="submit">Guardar</button>
        </form>
      </div>
      <div class="modal-body p-5 pt-0" id="products-table">

      </div>
    </div>
  </div>
</div>